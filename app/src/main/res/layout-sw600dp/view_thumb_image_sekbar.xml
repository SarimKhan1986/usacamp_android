<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.usacamp.utils.SeekBarImage
        android:id="@+id/tvThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/purchase_dlg_thumb"
        android:padding="4dp"
        android:textColor="@color/green_dark_more"
        android:visibility="visible"
    />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:max="10"
        android:paddingLeft="5dp"
        android:paddingTop="12dp"
        android:paddingRight="5dp"
        android:progress="0"
        android:progressDrawable="@drawable/purcahse_dlg_bar"
        android:thumb="@drawable/purchase_dlg_discrete"
        app:tickMark="@drawable/purchase_dlg_discrete"
        app:tickMarkTintMode="src_atop" />

</merge>