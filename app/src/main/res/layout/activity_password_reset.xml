<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_height="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/actionbar_top_space"
        android:background="@color/white">
        <ImageButton
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:src="@drawable/newback"
            android:onClick="onBack"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/lgtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="找回登录密码"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/grey_90"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sms_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="40dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_pass_reset_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:theme="@style/EditTextTheme"
                android:hint="@string/edit_text_phone_hint"
                android:inputType="phone"
                />
            <ImageView
                android:id="@+id/img_aurora_edit_remove"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/aurora_edt_remove"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/edit_pass_reset_verify"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:paddingStart="10dp"
                android:selectAllOnFocus="true"
                android:inputType="numberDecimal"
                android:theme="@style/EditTextTheme"
                android:hint="@string/edit_text_sms_hint"
                />

            <TextView
                android:id="@+id/text_pass_reset_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:textColor="#999999"
                android:textSize="14sp"/>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_pass_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:enabled="false"
            android:background="@drawable/gray_radius_aurora"
            android:onClick="onPasswordReset"
            android:text="下一步"
            android:textColor="@color/colorWhite" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="收不到验证码？"
            android:layout_marginTop="10dp"
            android:onClick="ShowSMSDlg"
            />
    </LinearLayout>

</LinearLayout>