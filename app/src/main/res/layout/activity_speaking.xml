        <LinearLayout
            android:id="@+id/refreshly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:clickable="true"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/speakingfabrefresh2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/speakingresultrefresh"
                android:visibility="visible" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="重新读"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/playbtnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="5dp">

                <ImageButton
                    android:id="@+id/speakingfabplay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/speechplay"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/speakingfabmic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/speech"
                    android:elevation="5dp" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/speakingprogressbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:elevation="5dp"
                    app:cpb_background_progressbar_color="@color/transparent"
                    app:cpb_progress="0"
                    app:cpb_progress_max="30"
                    app:cpb_progressbar_color="@color/green_dark"
                    app:cpb_progressbar_width="1dp"
                    app:cpb_round_border="true" />
            </RelativeLayout>
            <TextView
                android:id="@+id/playtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="开始跟读"/>
        </LinearLayout>
        <LinearLayout
            android:id = "@+id/nextly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/speakingfabnext"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/speakingbuttonbackground"
                android:elevation="5dp"
                android:clickable="false"
                android:src="@drawable/speakingnextbtn" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="下一句"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/fabresultbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:adjustViewBounds="true"
            android:background="@drawable/speakingresultbtn"
            android:elevation="3dp"
            android:visibility="gone" />
    </LinearLayout>

