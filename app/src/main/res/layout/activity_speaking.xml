    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/speakingfab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_over"
        android:clickable="true"
        android:contentDescription="TODO"
        android:rotation="-90"
        android:scaleType="fitXY"
        android:src="@drawable/speakingfloatingbtn"
        app:fabCustomSize="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="80dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayExtended" />

    <Button
        android:id="@+id/speakingfabB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/b"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/speakingfab"
        app:layout_constraintEnd_toStartOf="@+id/speakingfab" />

    <Button
        android:id="@+id/speakingfabA"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/a"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/speakingfab"
        app:layout_constraintEnd_toStartOf="@+id/speakingfabB" />

    <Button
        android:id="@+id/speakingfabMenu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/fabmenu"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/speakingfab"
        app:layout_constraintEnd_toStartOf="@+id/speakingfabA" />

    <Button
        android:id="@+id/speakingfabHome"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/fabhome"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/speakingfab"
        app:layout_constraintEnd_toStartOf="@+id/speakingfabMenu" />

    <LinearLayout
