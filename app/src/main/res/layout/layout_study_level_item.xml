<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    >
    <LinearLayout
        android:id="@+id/lyt_study_level"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/speaking_outline_black"
        android:gravity="center_vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lyt_study_level1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_leftright_top_7"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_level_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="级别 1"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/yuantiscregular"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/text_level_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/yuantiscregular"
            android:text="CAMP 1"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/explyt"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:paddingEnd="1dp"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/text_level_status1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="待\n学\n习"
            android:fontFamily="@font/yuantiscregular"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/dark_yellow_radius"
            android:textColor="@color/white"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/image_level_lock"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/lock"
        android:visibility="visible"/>


</RelativeLayout>
